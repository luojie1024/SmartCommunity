<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        

         
                
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
           
            
              <RelativeLayout style="@style/Controlitem" >
                  <EditText 
                    android:id="@+id/ed_sendcom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/bt_sendcom"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:hint="@string/input_mes" 
                    android:maxLength="8"
                    android:inputType="number"
         
                    
                   />
                <Button
                    android:id="@+id/bt_sendcom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray" /> 
            
            <LinearLayout
              android:layout_height="wrap_content"
              android:layout_width="match_parent"       
               android:layout_gravity="center_horizontal"
               android:paddingLeft="10dp"
               android:paddingRight="10dp"
                 android:textColor="@android:color/black"
                  android:background="@color/white" 
                  >
            <LinearLayout 
                 android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:gravity="center" 
               android:orientation="vertical">
               
                  <ImageView 
                      android:id="@+id/im_gate"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_gate_b"
                      />
                  
                  <TextView 
                      android:id="@+id/tv_gate"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="门磁：关"
                    
                      />
                  
                  </LinearLayout>
                  
          <LinearLayout 
                 android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:gravity="center" 
               android:orientation="vertical">
                  <ImageView 
                      android:id="@+id/im_smoke"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_smoke_b"
                     
                      android:paddingLeft="15dp"
                      />
                  <TextView 
                      android:id="@+id/tv_smoke"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="烟雾：正常"
                      android:paddingLeft="15dp"
                     
                      />
                   </LinearLayout>
                   
                   <LinearLayout 
                 android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:gravity="center" 
               android:orientation="vertical">
                  <ImageView 
                      android:id="@+id/im_gas"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_gas_b"
                    
                      android:paddingLeft="15dp"
                      />
                  <TextView 
                      android:id="@+id/tv_gas"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="燃气：正常"
                      android:paddingLeft="15dp"
                     
                      />
                  </LinearLayout>
                    <LinearLayout 
                 android:layout_height="wrap_content"
              android:layout_width="wrap_content"
             android:gravity="center" 
               android:orientation="vertical">
                  
                   <ImageView 
                      android:id="@+id/im_body"
             
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_body_b"
                     
                      android:paddingLeft="15dp"
                     
                      />
                  <TextView 
                      android:id="@+id/tv_body"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="人体感应：无人"
                      android:paddingLeft="15dp"
                      
                      />
                    </LinearLayout>
                  
            </LinearLayout>
            
             <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray" /> 
                
           
            
       
             
             
             
             
             
                
                
             
            
            
            <RelativeLayout style="@style/Controlitem" >
                
                  <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="控制指令：" 
                    android:id="@+id/tv_cor"
                    />
                  <Spinner 
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                      android:id="@+id/sp_mes"
                      android:layout_toRightOf="@+id/tv_cor"
                      android:entries="@array/message"               
                      />
            </RelativeLayout>
            
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray" /> 
                
           
            
             <RelativeLayout style="@style/Controlitem" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/onoff_LED" />

                <Switch
                    android:id="@+id/sw_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

              
             
        
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray" /> 
               
            
            <RelativeLayout style="@style/Controlitem" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/set_group_LED" />

                <LinearLayout
                    android:id="@+id/ll_color"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tvColorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/value_bule" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right_icon"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="18dp"
                        android:layout_marginLeft="30dp" />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_red_LED" />

                <TextView
                    android:id="@+id/tv_red"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0"
                    android:textColor="@color/value_bule" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:id="@+id/redsub"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/sub" />

                <SeekBar
                    android:id="@+id/sb_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/redadd"
                    android:layout_toRightOf="@+id/redsub"
                    android:max="254" />

                <ImageView
                    android:id="@+id/redadd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/add" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_green_LED" />

                <TextView
                    android:id="@+id/tv_green"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0"
                    android:textColor="@color/value_bule" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:id="@+id/greensub"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/sub" />

                <SeekBar
                    android:id="@+id/sb_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/greenadd"
                    android:layout_toRightOf="@+id/greensub"
                    android:max="254" />

                <ImageView
                    android:id="@+id/greenadd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/add" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_blue_LED" />

                <TextView
                    android:id="@+id/tv_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0"
                    android:textColor="@color/value_bule" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:id="@+id/bluesub"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/sub" />

                <SeekBar
                    android:id="@+id/sb_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/blueadd"
                    android:layout_toRightOf="@+id/bluesub"
                    android:max="254" />

                <ImageView
                    android:id="@+id/blueadd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/add" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_motor_speed" />

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0"
                    android:textColor="@color/value_bule" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:id="@+id/speedsub"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/sub" />

                <SeekBar
                    android:id="@+id/sb_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/speedadd"
                    android:layout_toRightOf="@+id/speedsub"
                    android:max="10" />

                <ImageView
                    android:id="@+id/speedadd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:src="@drawable/add" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray" />

            <RelativeLayout style="@style/Controlitem" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/Infrared" />

                <Switch
                    android:id="@+id/sw_infrared"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray" />

            <RelativeLayout style="@style/Controlitem" >

                <TextView
                    android:id="@+id/tv_template"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="@color/value_bule" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/Temperature" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray" />

            <RelativeLayout style="@style/Controlitem" >

                <TextView
                    android:id="@+id/tv_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="@color/value_bule" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_humidity"
                    android:layout_alignBottom="@+id/tv_humidity"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/Humidity" />
                
                
            </RelativeLayout>
           
           
           
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/line_gray" />
          
        </LinearLayout>
    </ScrollView>

</LinearLayout>