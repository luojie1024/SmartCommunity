<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
   
     <LinearLayout
        android:id="@+id/bt_add_air"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgNoDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_stb_v53_normal" />
        
        <TextView
            android:id="@+id/tvNoDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/no_devices"
            android:textSize="16sp" />
    </LinearLayout>
    
       <ScrollView
        android:id="@+id/svListGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
           
            <include
                android:id="@+id/lldevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/item_air_con_mes" />
    
        </LinearLayout>
    </ScrollView>
     
 
</RelativeLayout >